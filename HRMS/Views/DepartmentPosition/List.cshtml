@model IEnumerable<HRMS.Models.DepartmentPositioncs>

@{
    ViewData["Title"] = "List";
}

 <main id="main" class="main">

    <div class="pagetitle">
      <h1>Designation Table</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
            </br>  
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <form action="List">
                <div class="input-group md-form align-content-sm-around form-2 pl-0">
                    <select id="#my-dropdown" name="searchOption" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                    <input name="searchValue" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search" />
                    <div class="input-group-append">
                        <button type="submit" class="input-group-text red lighten-3" id="basic-text1">
                            <i class="fas fa-search text-black-grey" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </form>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Department Name</th>
                    <th scope="col">Position Name</th>
                    <th></th>
               
                  </tr>
                </thead>
                <tbody>
                 @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.No)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department.DeptName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Position.Name)
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.No">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.No">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.No">Delete</a>
                            </td>
                        </tr>
                }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->



