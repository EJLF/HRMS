@{
}

<div class="container mt-5" style="width: 400px;">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="card p-4 text-center">
            <p class="text-black fs-3">Sign In</p>
            <p class="text-secondary mt-n3">Please Register to continue</p>

            <div class="text-start">
                <div class="mt-3">
                    <input class="form-control" asp-for="FirstName" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input class="form-control" asp-for="MiddleName" placeholder="Middle Name" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input class="form-control" asp-for="LastName" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input class="form-control" asp-for="Email" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Login</button>

        </div>
    </form>
</div>

