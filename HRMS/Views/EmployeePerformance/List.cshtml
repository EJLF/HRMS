@model IEnumerable<HRMS.Models.EmployeePerformance>

@{
    ViewData["Title"] = "List";
}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Performance Table</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
            </br>  
           <p>
                <a class="btn btn-primary" role="button" asp-action="Create"><i class="fa fa-plus"></i> Add Review</a>
            </p>
            <form action="List">
                <div class="input-group md-form align-content-sm-around form-2 pl-0">
                    <input name="searchValue" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search" />
                    <div class="input-group-append">
                        <button type="submit" class="input-group-text red lighten-3" id="basic-text1">
                            <i class="fas fa-search text-black-grey" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </form>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">NO</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Review</th>
                    <th></th>
               
                  </tr>
                </thead>
                <tbody>
                 @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpPerformanceId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PerformanceReview)
                            </td>
                            <td>
                               <a class="btn btn-success" role="button" asp-action="Update" asp-route-EmpPerformanceId="@item.EmpPerformanceId">Edit</a> 
                               <a class="btn btn-warning" role="button" asp-action="Details" asp-route-EmpPerformanceId="@item.EmpPerformanceId">Details</a> 
                               <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-EmpPerformanceId="@item.EmpPerformanceId">Delete</a>
                            </td>
                        </tr>
                }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

@section scripts{
    <script>
        $(function () {
            $("#basic-text1").on('keyup', function (e) {
                $("form").submit();
            });
        });
    </script>
}



