@model HRMS.Models.EmployeePerformance

@{
    ViewData["Title"] = "Details";
}

<main id="main" class="main">
    <section class="section">
        <h1>Details</h1>

        <div>
            <h4>EmployeePerformance</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    Employee Name:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.EmpId)
                </dd>
                <dt class = "col-sm-2">
                    Performance Review:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PerformanceReview)
                </dd>
                <dt class = "col-sm-2">
                    Review by:
                </dt>

            </dl>
        </div>
        <div>
            <a asp-action="Update" asp-route-EmpPerformanceId="@Model?.EmpPerformanceId">Edit</a> |
            <a asp-action="List">Back to List</a>
        </div>
    </section>
</main>