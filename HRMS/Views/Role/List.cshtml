@model List<IdentityRole>
@{
}


<main id="main" class="main">

    <div class="pagetitle">
      <h1>Role Table</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
            </br>  
            <a asp-action="Create" asp-controller="Role">Add Role</a>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Role Name</th>
                    <th></th>
               
                  </tr>
                </thead>
                <tbody>
                 @foreach(var role in Model){
                    <tr>
                      <th scope="row">@role.Id</th>
                      <td>@role.Name</td>
                      <td><a asp-controller="Role" asp-action="Update" asp-route-roleId="@role.Id">Edit</a>
                      <a asp-controller="Role" asp-action="Delete" asp-route-roleId="@role.Id" >Delete</a></td>
                    </tr>
                }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

