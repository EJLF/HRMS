@model IEnumerable<HRMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "List";
}
 <main id="main" class="main">

    <div class="pagetitle">
      <h1>Employee Table</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
            </br>
            <p>
                <a class="btn btn-primary" role="button" asp-controller="Employee" asp-action="Create"><i class="fa fa-plus"></i> Add Employee</a>
                <a class="btn btn-primary" role="button" asp-controller="Employee" asp-action="InactiveList"><i class="fa fa-plus"></i> Show Inactive</a>
            </p>
            <form action="List">
                <div class="input-group md-form align-content-sm-around form-2 pl-0">
                    <select id="my-dropdown" name="searchOption" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                    <input name="searchValue" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search" />
                    <div class="input-group-append">
                        <button type="submit" class="input-group-text red lighten-3" id="basic-text1">
                            <i class="fas fa-search text-black-grey" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </form>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Department</th>
                    <th scope="col">Position</th>
                    <th scope="col">Review</th>
                    <th scope="col">Edit</th>
                    <th scope="col">View</th>
                    <th scope="col">Status</th>
                    
                  </tr>
                </thead>
                <tbody>
                 @{int i=0;}
                 @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @(++i)
                                </td>

                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
       
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.DeptName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Position.Name)
                                </td>
         
                                 <td>   <a class="btn btn-primary" role="button" asp-controller="EmployeePerformance" asp-action="Create" asp-route-userID="@item.Id" asp-route-employeeName="@item.FullName"> <i class="bi bi-chat-left-text"></i></a> </td>
                                 <td>   <a class="btn btn-primary" role="button" asp-action="Update" asp-route-accountId="@item.Id"><i class="fa fa-edit"></i> </a> </td>
                                 <td>   <a class="btn btn-primary" role="button" asp-action="Details" asp-route-accountId="@item.Id"><i class="bi bi-folder"></i></a> </td>  
                                 <td>   <a class="btn btn-success" role="button" asp-action="Delete" asp-route-accountId="@item.Id"><i class="bi bi-check-circle"></i></a></td>
                            </tr>
                    }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

@section scripts{
    <script>
        $(document).ready(function () {
            $('#my-dropdown').on('change', function () {
                var selectedValue = $(this).val();
                console.log("Performing search for: " + selectedValue);
            });
            $("#basic-text1").on('keyup', function (e) {
                $("form").submit();
            });
        });
    </script>
}











